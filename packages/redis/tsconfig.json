{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"outDir": ".",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["*"],
	"exclude": ["node_modules"]
}
